<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nordicid.accessorydemo">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main activity / start view. -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Declaration of the BLE device search activity. -->
        <activity
            android:name=".DeviceSearchActivity"
            android:label="BLE Device Search"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Reader / accessory settings"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AppSettingsActivity"
            android:label="Application settings"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:name=".ActionsActivity"
            android:label="Accessory actions"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".QueryNewEPCActivity"
            android:label="New EPC data"
            android:theme="@style/Theme.AppCompat.Dialog">
        </activity>

        <service
            android:name="com.nordicid.nurapi.UartService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>